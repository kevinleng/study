<TabWidget xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buttonbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:layout_margin="0dp"
        android:background="@drawable/buttonbarbackground"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_tab_0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="tab0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#fff"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:layout_margin="0dp"
        android:background="@drawable/buttonbarbackground"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_tab_1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="tab1"
            android:textColor="#fff"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:layout_margin="0dp"
        android:background="@drawable/buttonbarbackground"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_tab_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="tab2"
            android:textColor="#fff"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="56dp"
        android:layout_margin="0dp"
        android:background="@drawable/buttonbarbackground"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_tab_3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="tab3"
            android:textColor="#fff"
            android:textSize="12dp" />
    </LinearLayout>

</TabWidget>